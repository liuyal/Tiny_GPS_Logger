<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <TextView
        android:id="@+id/ble_name_label"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:text="@string/ble_name"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        tools:ignore="RelativeOverlap" />

    <TextView
        android:id="@+id/ble_mac_label"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:text="@string/ble_mac"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_below="@id/ble_name_label"
        android:layout_marginTop = "5dp"
        android:layout_marginBottom="0dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/ble_bond_label"
        android:gravity="center_vertical"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="@string/ble_bond"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_below="@id/ble_mac_label"
        android:layout_marginTop = "5dp"
        android:layout_marginBottom="0dp"
        android:layout_marginStart="10dp"/>

    <Button
        android:id="@+id/connect_btn"
        android:text="@string/connect_btn_label"
        android:layout_width="160dp"
        android:layout_height="45dp"
        android:textSize="20sp"
        android:paddingStart="30dp"
        android:textAlignment="viewStart"

        android:textColor="#FFFFFF"
        android:background="@drawable/connect_btn"
        android:stateListAnimator="@null"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="10dp"
        tools:ignore="RtlSymmetry" />


</RelativeLayout>
